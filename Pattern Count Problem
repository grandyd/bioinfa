#include <iostream>
#include <string.h>

using namespace std;

int main()
{
	string pattern, genome;
	char *test_pattern;
	
	cin >> pattern>>genome;
	test_pattern = new char[pattern.length() + 1];
	int i = 0;
	int counter = 0;
	while (i!=genome.length()-pattern.length()+1)
	{
		for (int j = 0; j < pattern.length(); j++)
		{
			test_pattern[j] = genome[i + j];
		}
		test_pattern[pattern.length()] = '\0';
		if (test_pattern==pattern)
		{
			counter++;
		}
		i++;
	}
	delete []test_pattern;
	cout << counter;
    return 0;
}
